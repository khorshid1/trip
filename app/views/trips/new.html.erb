<h1>Create a New Trip</h1>

<%= form_for @trip do |form| %>
  <div class="form-group">
    <%= form.label :Trip_name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.order(:name), :id, :name, { include_blank: true }, { class: "form-control" } %>
  </div>
    
  <div class="form-group">
    <%= form.label :city_id %>
    <%= form.text_field :city_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :duration_of_trip %> (in days) 
    <%= form.text_field :duration, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :season %>
    <%= form.text_field :season, class: "form-control" %>
  </div>

  <%= form.button 'Create Trip', class: "btn btn-success" %>

<% end %>



